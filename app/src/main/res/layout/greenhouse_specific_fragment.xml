<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/greenhouseNameBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/greenhouseImageCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:orientation="vertical"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/vector" />

        <TextView
            android:id="@+id/greenhouseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Greenhouse 1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/deleteGreenhouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/trash" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/greenhouseImageCard"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:background="@drawable/greenhouse"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greenhouseNameBar"
        app:layout_constraintWidth_percent="0.85">

        <ImageView
            android:id="@+id/greenhouseImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/greenhouse" />
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/selectPlantProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greenhouseImageCard"
        android:layout_marginVertical="10dp"
        android:background="@color/palette_grey"
        app:layout_constraintWidth_percent="0.85"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/plantImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/potted_plant" />

        <TextView
            android:id="@+id/selectPlantProfileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select plant profile"
            android:layout_gravity="center"
            android:textColor="@color/palette_dark_green"/>
    </LinearLayout>

    <TableLayout
        android:id="@+id/measurementsTable"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectPlantProfile"
        app:layout_constraintWidth_percent="0.85"
        android:layout_marginVertical="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/palette_dark_green">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-4dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:src="@drawable/ic_baseline_device_thermostat_24" />


                <TextView
                    android:id="@+id/greenhouse_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/heletica_regular_family"
                    android:gravity="center"
                    android:text="22.3 C"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/palette_dark_green">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-4dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:src="@drawable/ic_baseline_co2_24" />


                <TextView
                    android:id="@+id/greenhouse_co2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/heletica_regular_family"
                    android:gravity="center"
                    android:text="320ppm"
                    android:textSize="16sp" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/palette_dark_green">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-4dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:src="@drawable/fan_icon" />


                <TextView
                    android:id="@+id/greenhouse_humidity"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/heletica_regular_family"
                    android:gravity="center"
                    android:text="Sachin"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/palette_dark_green">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-4dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:src="@drawable/ic_baseline_wb_sunny_24" />

                <TextView
                    android:id="@+id/greenhouse_light"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/heletica_regular_family"
                    android:gravity="center"
                    android:text="On"
                    android:textSize="16sp" />
            </LinearLayout>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>