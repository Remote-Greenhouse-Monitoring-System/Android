<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_bg"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/plantProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"

                android:fontFamily="@font/helvetica_bold_font"
                android:padding="4dp"
                android:text="Plant Profile Name"
                android:textColor="@color/palette_black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/plantProfileDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:padding="4dp"
                android:text="Plant Profile Description"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:padding="4dp"
                android:text="Optimals:"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:paddingStart="14dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_device_thermostat_24_black" />

                <TextView
                    android:id="@+id/plantProfileOptimalTemperature"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="@string/unit_temperature"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_co2_24_black"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/plantProfileOptimalCO2"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="320\nppm"
                    android:padding="4dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"

                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_invert_colors_24_black"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/plantProfileOptimalHumidity"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="50\n%"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="12sp" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_wb_sunny_24_black"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/plantProfileOptimalLight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:padding="4dp"
                    android:text="11000\nlux"
                    android:textAlignment="center"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/editPlantProfileButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_edit_24" />

        <ImageButton
            android:id="@+id/deletePlantProfileButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_delete_outline_24" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>